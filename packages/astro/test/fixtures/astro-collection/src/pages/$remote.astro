---

export function createPages() {
  return {
    route: '/remote/:lib',
    params() { 
      return [
        {lib: 'canvas-confetti'}, 
        {lib: 'preact'}, 
        {lib: 'svelte'},
      ] 
    },
    async props({params}) {
      return {
        pkg: await fetch(`https://api.skypack.dev/v1/package/${params.lib}`).then((res) => res.json())
      };
    }
  }
}

const { pkg } = Astro.props;
---

<div>
  <div id={`pkg-${pkg.name}`}>{pkg.name}</div>
</div>
